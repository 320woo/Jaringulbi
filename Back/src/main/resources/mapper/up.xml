<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.B303.model.mapper.UpMapper">

    <select id="getCount" parameterType="int" resultType="int">
        SELECT COUNT(*)
        FROM UP
        WHERE post_id = #{post_id}
    </select>

    <select id="selectUpById" parameterType="int" resultType="UpDto">
        SELECT *
        FROM UP
        WHERE post_id = #{post_id}
    </select>

    <insert id="insert" parameterType="UpDto">
        INSERT INTO UP (post_id, user_id)
        VALUES (#{post_id}, #{user_id});
    </insert>

    <delete id="delete" parameterType="UpDto">
        DELETE
        FROM UP
        WHERE post_id = #{post_id}
          AND user_id = #{user_id};
    </delete>
</mapper>