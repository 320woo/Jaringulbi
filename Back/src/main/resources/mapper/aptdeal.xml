<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.model.mapper.AptDealMapper">

	<resultMap type="AptDealDto" id="aptDealList">
		<result property="no" column="no"/>
		<result property="dong" column="dong"/>
		<result property="AptName" column="AptName"/>
		<result property="code" column="code"/>
		<result property="dealAmount" column="dealAmount"/>
		<result property="buildYear" column="buildYear"/>
		<result property="dealYear" column="dealYear"/>
		<result property="dealMonth" column="dealMonth"/>
		<result property="dealDay" column="dealDay"/>
		<result property="area" column="area"/>
		<result property="floor" column="floor"/>
		<result property="jibun" column="jibun"/>
		<result property="type" column="type"/>
		<result property="rentMoney" column="rentMoney"/>
	</resultMap>

	<select id="selectAptDeal" resultMap="aptDealList">
		select *
		from housedeal
		order by no desc
		limit 9
	</select>
	
	<select id="searchAptDeal" parameterType="searchDto" resultMap="aptDealList">
		select *
		from housedeal
		where dong = #{dongname}
		order by no desc
		limit #{pageCount}, 9
	</select>
	
	<select id="selectDongName" parameterType="String" resultType="String">
		select dong
		from dongcode
		where dongcode = #{dongcode}
	</select>

	
</mapper>